                                <option value="1">One-on-One</option>

                            </select> -->
                                <input list="ice-cream-flavors" id="ice-cream-choice" name="event_type">
                                <datalist id="ice-cream-flavors">
                                    <option value="Multiple">
                                    <option value="One-on-One" selected>

                                </datalist>

                            </div>
                            <!-- Event type: ends -->
                            <!-- Description box: starts -->
                            <div class="col-12" style="padding-right: 0px;">
                                <label for="inputAddress" class="form-label">Description</label>
                                <input type="text" class="form-control" id="inputAddress" name="description">
                            </div>
                            <!-- Description: ends -->
                            <!-- event ki start date -->
                            <div class="col-md-5 date" style="padding-right: 0px;">
                                <label for="inputCity" class="form-label"> Start Date</label>
                                <input type="date" id="date" class="form-control" style="color: black;"
                                    name="calanderdate1">
                            </div>
                            <!-- event start date: ends -->
                            <!-- event ki end date :: make sure ki end date is later or same as start date -->
                            <div class="col-md-5 date" style="padding-right: 0px;">
                                <label for="inputCity" class="form-label">End Date</label>
                                <input type="date" id="date" class="form-control" style="color: black;"
                                    name="calanderdate2">
                            </div>
                            <!-- end start: ends -->
                            <!-- start time: starts -->
