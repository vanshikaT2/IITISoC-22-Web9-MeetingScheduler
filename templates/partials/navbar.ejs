                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Create an Event</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body mh-50">
                        <form class="row g-3" method="post" jsaction="/day">
                            <!-- Event name ka input idhar se lena he -->
                            <div class="col-md-6 form-floating" style="padding-right: 0px;">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com" name="eventname">
                                <label for="floatingInput">Event Name</label>
                            </div>
                            <!-- Event name: ends -->
                            <!-- Event type: starts :: select ki jagah dropdown bhi use kar sakte hai -->
                            <!-- aditi ko puch lena agar change karna ho toh -->
